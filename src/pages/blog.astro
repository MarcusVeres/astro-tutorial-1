---
import BaseLayout from '../layouts/BaseLayout.astro'
import BlogPost from '../layouts/BlogPost.astro'

const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));

const pageTitle = "Blog"
---
<BaseLayout pageTitle={`${pageTitle} blog`}>
    <h2>{pageTitle} blog blog</h2>
    <ul>
        
        <!-- Method 1 -->
        <!--
            <li><a href="/posts/post-1/">Blog 1</a></li>
            <li><a href="/posts/post-2/">Blog 2</a></li>
            <li><a href="/posts/post-3/">Blog 3</a></li>
        -->
        
        <!-- Method 2 -->
        <!--
        {allPosts.map((post: any) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
        -->
        
        <!-- Method 3 -->
        {allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}

    </ul>
</BaseLayout>
